---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('messaging');
  return entries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

// Extract title from first h1 heading or use slug
const title = entry.data.title || headings.find(h => h.depth === 1)?.text || entry.slug;
---

<Layout title={`${title} - Use What Works`}>
  <section class="py-16 px-4 sm:px-6">
    <article class="prose">
      <Content />
    </article>
  </section>
</Layout>

<style>
  .prose {
    @apply max-w-3xl mx-auto;
  }

  .prose :global(h1) {
    @apply text-3xl sm:text-4xl font-bold mb-6;
  }

  .prose :global(h2) {
    @apply text-2xl sm:text-3xl font-bold mt-12 mb-6;
  }

  .prose :global(h3) {
    @apply text-lg font-semibold text-primary mb-2 mt-8;
  }

  .prose :global(h4) {
    @apply text-base font-semibold mb-2 mt-6;
  }

  .prose :global(p) {
    @apply text-text-offset leading-relaxed mb-4;
  }

  .prose :global(a) {
    @apply text-primary underline underline-offset-2 hover:decoration-primary transition-colors;
    text-decoration-color: color-mix(in srgb, var(--color-primary) 30%, transparent);
  }

  .prose :global(a:hover) {
    text-decoration-color: var(--color-primary);
  }

  .prose :global(ul) {
    @apply space-y-2 text-text-offset my-6 list-disc pl-6;
  }

  .prose :global(ol) {
    @apply space-y-2 text-text-offset my-6 list-decimal pl-6;
  }

  .prose :global(li) {
    @apply leading-relaxed;
  }

  .prose :global(hr) {
    @apply border-border my-12;
  }

  .prose :global(blockquote) {
    @apply text-text-offset italic border-l-4 border-primary pl-6 my-6;
  }

  .prose :global(code) {
    @apply bg-background-offset px-1.5 py-0.5 rounded text-sm;
  }

  .prose :global(pre) {
    @apply bg-background-offset p-4 rounded-lg overflow-x-auto my-6;
  }
</style>
